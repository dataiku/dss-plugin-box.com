{
    "meta" : {
        "label": "Filesystem provider",
        "description": "Enables sharing between DSS and your box.com account",
        "icon": "icon-cloud"
    },
    "params": [
        {
            "name": "client_id",
            "label": "Client ID",
            "type": "STRING",
            "description": "Your Box.com Client ID",
            "defaultValue" : "${box_client_id}",
            "mandatory": true
        },
        {
            "name": "client_secret",
            "label": "Client secret",
            "type": "STRING",
            "description": "Your Box.com client secret",
            "defaultValue" : "${box_client_secret}",
            "mandatory": true
        },
        {
            "name": "access_token",
            "label": "Access token",
            "type": "STRING",
            "description": "The access token generated for your box.com app",
            "defaultValue" : "${box_access_token}",
            "mandatory": true
        }
    ]
}
